import logging
import os
import asyncio
import yt_dlp
from aiogram import Bot, Dispatcher, executor, types
from aiogram.utils.exceptions import ChatNotFound

# Loglarni yozib borish
logging.basicConfig(level=logging.INFO)

# Token va kanal username (Railway Variables’dan olinadi)
BOT_TOKEN = os.getenv("8415194078:AAFETEtK7v-S8zb6LslLj_l6aQtXU6NJSdo")
CHANNEL_USERNAME = os.getenv("@gilosku")  # masalan: @mening_kanalim

bot = Bot(token=BOT_TOKEN)
dp = Dispatcher(bot)


# 🔹 Kanal obunasini tekshirish
async def check_subscription(user_id):
    try:
        member = await bot.get_chat_member(CHANNEL_USERNAME, user_id)
        return member.status in ["member", "administrator", "creator"]
    except ChatNotFound:
        return True  # Agar kanal topilmasa, tekshiruvni o'tkazib yuboramiz


# 🔹 /start komandasi
@dp.message_handler(commands=["start"])
async def start(message: types.Message):
    text = (
        "👋 Salom! Bu bot orqali Instagram, TikTok va YouTube videolarini yuklab olishingiz mumkin.\n\n"
        "🎯 Link yuboring va video tayyor bo‘ladi!"
    )
    await message.answer(text)


# 🔹 Foydalanuvchi link yuborsa
@dp.message_handler(content_types=["text"])
async def download_video(message: types.Message):
    user_id = message.from_user.id
    subscribed = await check_subscription(user_id)

    if not subscribed:
        await message.answer(
            f"❌ Botdan foydalanish uchun avval kanalimizga obuna bo‘ling:\n{CHANNEL_USERNAME}"
        )
        return

    url = message.text.strip()
    if not url.startswith("http"):
        await message.answer("❗ Iltimos, to‘g‘ri link yuboring.")
        return

    await message.answer("⏳ Yuklab olinmoqda, kuting...")

    try:
        # Faylni yuklab olish
        ydl_opts = {
            "outtmpl": "video.%(ext)s",
            "format": "mp4",
        }

        loop = asyncio.get_event_loop()
        with yt_dlp.YoutubeDL(ydl_opts) as ydl:
            info = await loop.run_in_executor(None, lambda: ydl.extract_info(url, download=True))
            file_name = ydl.prepare_filename(info)

        # Faylni yuborish
        with open(file_name, "rb") as video:
            await message.answer_video(video)

        # Faylni o‘chirish
        os.remove(file_name)

    except Exception as e:
        await message.answer(f"❌ Xato yuz berdi: {str(e)}")


# 🔹 Botni ishga tushirish
if __name__ == "__main__":
    executor.start_polling(dp, skip_updates=True)
